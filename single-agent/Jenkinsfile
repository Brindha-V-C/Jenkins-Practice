pipeline {
    agent {
        docker {
            image 'node:16-alpine'
            // 1. Run the container as the built-in 'node' user
            args '-u node'
            // 2. Use a workspace inside that user's home directory
            customWorkspace '/home/node/workspace'
        }
    }
    stages {
        stage('Install Dependencies') {
            steps {
                dir('single-agent') {
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                // This command will run the 'test' script from package.json
                 dir('single-agent') {
                    sh 'npm test'
                }
            }
        }
    }
}